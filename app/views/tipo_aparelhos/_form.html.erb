<%=  form_with  model: @tipo_aparelho, local: true do |form| %>
    
    <div class="form-group">    
        <p>
            <%= form.label :Nome %>
            <br>
            <%= form.text_field :nome, class: "form-control", placeholder: "Ex.: Aspirador de Pó" %>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Prazo de Manutenção (em dias)" %>
            <br>
            <%= form.text_field :prazo_manutencao , class: "form-control", placeholder: "Ex.: 15"%>
        </p>
    </div>
    
    <% if flash[:notice] %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:notice] %>
        </div>
    <% end %>
    <br/>

    <p class="text-center">
        <%= form.submit "Enviar Dados", class: "btn btn-dark" %>
    </p>    
<% end %>