<%=  form_with  model: @pedido_orcamento, local: true do |form| %>
    
    <div class="form-group">    
        <p>
            <%= form.label :"Cliente" %>
            <br>
            <%= form.collection_select :id_cliente, @clientes, :id, :nome, class: "form-control", placeholder: "Ex.: Pendente" %>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Tipo de Aparelho" %>
            <br>
            <%= form.collection_select :id_aparelho, @tipo_aparelhos, :id, :nome, class: "form-control", placeholder: "Ex.: Área Financeira"%>
        </p>
    </div>

    <div class="form-group">    
        <p>
            <%= form.label :"Valor da Mão de Obra" %>
            <br>
            <%= form.text_field :valor_mao_de_obra, class: "form-control", placeholder: "Ex.: R$ 230.00" %>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Data do Orçamento" %>
            <br>
            <%= form.date_field :data, class: "form-control", placeholder: "Ex.: Informe a data"%>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Status de Autorização" %>
            <br>
            <%= form.collection_select :status_autorizacao, @status_autorizacoes, :id, :descricao_status, class: "form-control", placeholder: "Ex.: Área Financeira"%>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Funcionário Responsável" %>
            <br>
            <%= form.collection_select :id_funcionario, @funcionarios, :id, :nome, class: "form-control", placeholder: "Ex.: Área Financeira"%>
        </p>
    </div>

    
    
    <p class="text-center">
        <%= form.submit "Enviar Dados", class: "btn btn-dark" %>
    </p>    
<% end %>