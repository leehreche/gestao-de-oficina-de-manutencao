<%=  form_with  model: @pedido_supplier, local: true do |form| %>
    
    <div class="form-group">    
        <p>
            <%= form.label :"Fornecedor" %>
            <br>
            <%= form.collection_select :id_fornecedor, @suppliers, :id, :nome_fantasia, class: "form-control", placeholder: "Ex.: Pendente" %>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Data do Orçamento" %>
            <br>
            <%= form.date_field :data, class: "form-control", placeholder: "Ex.: Informe a data"%>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Funcionário Responsável" %>
            <br>
            <%= form.collection_select :id_funcionario, @funcionarios, :id, :nome, class: "form-control", placeholder: "Ex.: Área Financeira"%>
        </p>
    </div>

    
    
    <p class="text-center">
        <%= form.submit "Enviar Dados", class: "btn btn-dark" %>
    </p>    
<% end %>