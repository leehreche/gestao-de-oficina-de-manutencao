<%=  form_with  model: @servico, local: true do |form| %>
    
    <div class="form-group">    
        <p>
            <%= form.label :"Descrição do Serviço" %>
            <br>
            <%= form.text_field :descricao_servico, class: "form-control", placeholder: "Ex.: Reparo em Motor para Refrigeração" %>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Data de Solicitação do Serviço" %>
            <br>
            <%= form.date_field :data, class: "form-control", placeholder: "Ex.: Informe a data"%>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Pedido de Orçamento" %>
            <br> 
            <%= form.collection_select :pedido_orcamento_id, @pedido_orcamentos, :id, :pedido_com_id, class: "form-control" %>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Tipo de Aparelho" %>
            <br>
            <%= form.collection_select :tipo_aparelho_id, @tipo_aparelhos, :id, :nome, class: "form-control", placeholder: "Ex.: Área Financeira"%>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Status Andamento" %>
            <br>
            <%= form.collection_select :state_id, @states, :id, :descricao_status, class: "form-control", placeholder: "Ex.: Área Financeira"%>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Cadastro realizado por" %>
            <br>
            <%= form.collection_select :funcionario_cadastro_id, @funcionarios, :id, :nome, class: "form-control", placeholder: "Ex.: Área Financeira"%>
        </p>
    </div>

    <% if flash[:notice] %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:notice] %>
        </div>
    <% end %>
    <br/>

    <p class="text-center">
        <%= form.submit "Enviar Dados", class: "btn btn-dark" %>
    </p>    
<% end %>