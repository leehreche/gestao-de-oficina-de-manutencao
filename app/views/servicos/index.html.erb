<div class="container text-center">
    <div class="row">
        <div class="col-6 text-left">
            <h1>Serviços</h1>
        </div>

        <div class="col-6 text-right">
            <%= link_to 'Novo Serviço', new_servico_path, class: "btn btn-dark" %>
        </div>
    </div>   
    <hr>
    <br/><br/>

    <table class="table table-striped"> 
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Data</th>
                <th scope="col">Descrição</th>
                <th scope="col">Pedido</th>
                <th scope="col">Status Andamento</th>	
                <th scope="col" colspan="3">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% @servicos.each do |servico| %>
                <tr>
                    <th scope="row"><%= servico.id %></td>
                    <td><%= servico.data %></td>
                    <td><%= servico.descricao_servico %></td>
                    <td>Pedido <%= servico.pedido_orcamento_id %></td>
                    <td><% @states.each do |state|
                            if servico.state_id == state.id %>
                                <%= state.descricao_status %>
                            <% end
                        end %>
                    </td>
                    <td><%= link_to 'Visualizar', servico, class: "btn btn-outline-primary" %></td>
                    <td><%= link_to 'Editar', edit_servico_path(servico),  class: "btn btn-outline-success" %></td>
                    <td><%= link_to 'Assumir', assumir_servico_path(servico),  class: "btn btn-outline-info" %></td>
                    <td><%= button_to 'Excluir', servico, method: :delete, class: "btn btn-outline-danger" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>