<%=  form_with  model: @funcionario, local: true do |form| %>
    
    <div class="form-group">    
        <p>
            <%= form.label :cpf %>
            <br>
            <%= form.text_field :cpf, class: "form-control", placeholder: "Ex.: 99999999999" %>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :nome %>
            <br>
            <%= form.text_field :nome , class: "form-control", placeholder: "Ex.: Joaquim da Silva"%>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :cargo %>
            <br>
            <%= form.text_field :cargo, class: "form-control", placeholder: "Ex.: Vendedor Interno"%>
        </p>
    </div>

    <% if flash[:notice] %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:notice] %>
        </div>
    <% end %>
    <br/>

    <p class="text-center">
        <%= form.submit "Enviar Dados", class: "btn btn-dark" %>
    </p>    
<% end %>