<div class="container text-center">
    <div class="row">
        <div class="col-1 text-left">
            <%= link_to 'Voltar', pedido_suppliers_path, class: "btn btn-dark" %>
        </div>
        <div class="col-9 text-center">
            <h1>Itens do Pedido</h1>
        </div>

        <div class="col-2 text-right">
            <%= link_to 'Adicionar Item', new_pedido_supplier_item_pedido_path, class: "btn btn-dark" %>
        </div>
    </div>   
    <hr>
    <br/><br/>

    <table class="table table-striped"> 
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Descricao</th>
                <th scope="col">Quantidade</th>	
                <th scope="col" colspan="3">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% @item_pedidos.each do |item_pedido| %>
                <tr>
                    <th scope="row"><%= item_pedido.id %></td>
                    <td><% @produtos.each do |produto|
                            if item_pedido.produto_id == produto.id %>
                                <%= produto.descricao %>
                            <% end
                        end %>
                    </td>
                    <td><%= item_pedido.quantidade %></td>
                    <td><%= link_to 'Visualizar', pedido_supplier_item_pedido_path(@pedido_supplier, item_pedido), class: "btn btn-outline-primary" %></td>
                    <td><%= link_to 'Editar', edit_pedido_supplier_item_pedido_path(@pedido_supplier, item_pedido),  class: "btn btn-outline-success" %></td>
                    <td><%= button_to 'Excluir', pedido_supplier_item_pedido_path(@pedido_supplier, item_pedido), method: :delete, class: "btn btn-outline-danger" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>