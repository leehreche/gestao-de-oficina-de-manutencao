<%=  form_with  model: @item_pedido, local: true do |form| %>
    
    <div class="form-group">    
        <p>
            <%= form.label :"Id do Pedido" %>
            <br>
            <%= form.text_field :id_pedido, @item_pedido.id_pedido, class: "form-control", placeholder: "Ex.: Pendente" %>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Produto" %>
            <br>
            <%= form.collection_select :id_produto, @produtos, :id, :descricao, class: "form-control", placeholder: "Ex.: Área Financeira"%>
        </p>
    </div>

    <div class="form-group">    
        <p>
            <%= form.label :"Quantidade" %>
            <br>
            <%= form.text_field :quantidade, class: "form-control", placeholder: "Ex.: R$ 230.00" %>
        </p>
    </div>   
    
    <p class="text-center">
        <%= form.submit "Enviar Dados", class: "btn btn-dark" %>
    </p>    
<% end %>