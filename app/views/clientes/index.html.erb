<div class="container text-center">
    <div class="row">
        <div class="col-6 text-left">
            <h1>Clientes</h1>
        </div>

        <div class="col-6 text-right">
            <%= link_to 'Novo Cliente', new_cliente_path, class: "btn btn-dark" %>
        </div>
    </div>   
    <hr>
    <br/><br/>

    <table class="table table-striped"> 
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">CPF</th>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>		
                <th scope="col" colspan="3">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% @clientes.each do |cliente| %>
                <tr>
                    <th scope="row"><%= cliente.id %></td>
                    <td><%= cliente.cpf %></td>
                    <td><%= cliente.nome %></td>
                    <td><%= cliente.telefone %></td>
                    <td><%= link_to 'Visualizar', cliente, class: "btn btn-outline-primary" %></td>
                    <td><%= link_to 'Editar', edit_cliente_path(cliente),  class: "btn btn-outline-success" %></td>
                    <td><%= button_to 'Excluir', cliente, method: :delete, class: "btn btn-outline-danger" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>