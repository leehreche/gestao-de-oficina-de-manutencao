<div class="container text-center">
    <div class="row">
        <div class="col-6 text-left">
            <h1>Fornecedores</h1>
        </div>

        <div class="col-6 text-right">
            <%= link_to 'Novo Fornecedor', new_fornecedore_path, class: "btn btn-dark" %>
        </div>
    </div>   
    <hr>
    <br/><br/>

    <table class="table table-striped"> 
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Nome Fantasia</th>
                <th scope="col">Telefone</th>		
                <th scope="col" colspan="3">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% @fornecedores.each do |fornecedor| %>
                <tr>
                    <th scope="row"><%= fornecedor.id %></td>
                    <td><%= fornecedor.cnpj %></td>
                    <td><%= fornecedor.nome_fantasia %></td>
                    <td><%= fornecedor.telefone %></td>
                    <td><%= link_to 'Visualizar', fornecedore, class: "btn btn-outline-primary" %></td>
                    <td><%= link_to 'Editar', edit_fornecedore_path(fornecedor),  class: "btn btn-outline-success" %></td>
                    <td><%= link_to 'Excluir', fornecedore, method: :delete, data: {confirm: 'Tem certeza?'}, class: "btn btn-outline-danger" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>