<%=  form_with  model: @state, local: true do |form| %>
    
    <div class="form-group">    
        <p>
            <%= form.label :"Descrição" %>
            <br>
            <%= form.text_field :descricao_status, class: "form-control", placeholder: "Ex.: Pendente" %>
        </p>
    </div>

    <div class="form-group"> 
        <p>
            <%= form.label :"Tipo de Status" %>
            <br>
            <%= form.select :tipo_status, [['Autorização','Autorização'], ['Andamento','Andamento']] , class: "selectpicker", placeholder: "Ex.: Escolha um tipo de status", width: "auto" %>
        </p>
    </div>

    <% if flash[:notice] %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:notice] %>
        </div>
    <% end %>
    
    <p class="text-center">
        <%= form.submit "Enviar Dados", class: "btn btn-dark" %>
    </p>    
<% end %>