<div class="container text-center">
    <div class="row">
        <div class="col-6 text-left">
            <h1>Status</h1>
        </div>

        <div class="col-6 text-right">
            <%= link_to 'Novo Status', new_state_path, class: "btn btn-dark" %>
        </div>
    </div>   
    <hr>
    <br/>
    <% if flash[:notice] %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:notice] %>
        </div>
    <% end %>
    <br/>

    <table class="table table-striped"> 
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Descrição</th>
                <th scope="col">Tipo</th>		
                <th scope="col" colspan="3">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% @states.each do |state| %>
                <tr>
                    <th scope="row"><%= state.id %></td>
                    <td><%= state.descricao_status %></td>
                    <td><%= state.tipo_status %></td>
                    <td><%= link_to 'Visualizar', state, class: "btn btn-outline-primary" %></td>
                    <td><%= link_to 'Editar', edit_state_path(state),  class: "btn btn-outline-success" %></td>
                    <td><%= button_to 'Excluir', state, method: :delete, class: "btn btn-outline-danger" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>